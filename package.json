{
  "name": "void-vault",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "bun run copy:functions",
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:api\"",
    "dev:frontend": "vite",
    "dev:api": "wrangler pages dev --port 8788 --live-reload",
    "prebuild": "bun run copy:functions",
    "build": "vite build && wrangler pages deploy",
    "build:frontend": "vite build",
    "copy:functions": "mkdir -p functions/{middleware,utils,types} && cp -r src/functions/* functions/ && cp -r src/middleware/* functions/middleware/ && cp -r src/utils/* functions/utils/ && cp -r src/types/* functions/types/",
    "lint": "eslint . --ext .vue,.ts,.tsx",
    "lint:fix": "eslint . --ext .vue,.ts,.tsx --fix",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "cf:dev": "wrangler pages dev --port 8788",
    "cf:deploy": "wrangler pages deploy",
    "cf:d1:migrate": "wrangler d1 migrations apply void-vault-db --local",
    "deploy:all": "bash scripts/deploy.sh"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260228.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.0",
    "postcss": "^8.4.0",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^1.1.0",
    "vue-tsc": "^2.0.0",
    "wrangler": "^4.68.1"
  }
}
